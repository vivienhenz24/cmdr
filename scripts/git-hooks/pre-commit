#!/bin/sh

# Run cargo fmt check
cargo fmt --check
if [ $? -ne 0 ]; then
  echo "Code formatting check failed! Please run 'cargo fmt' to format your code."
  echo "Commit aborted."
  exit 1
fi

# Run cargo check
cargo check
if [ $? -ne 0 ]; then
  echo "cargo check failed! Commit aborted."
  exit 1
fi

# Run cargo clippy with all targets (matches GitHub Actions)
cargo clippy --all-targets -- -D warnings
if [ $? -ne 0 ]; then
  echo "cargo clippy failed! Please fix the warnings above."
  echo "Commit aborted."
  exit 1
fi

echo "All checks passed. Proceeding with commit."
exit 0 